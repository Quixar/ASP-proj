@model project.Models.User.UserSignInFormModel
@{
    ViewData["Title"] = "Log In";
}

<div class="container mt-5" style="max-width: 500px;">
    <h2 class="text-center mb-4">Log In</h2>

    <form asp-action="Login" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Username" class="form-label"></label>
            <input asp-for="Username" class="form-control" placeholder="Enter your username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label"></label>
        </div>

        <button type="submit" class="btn btn-primary w-100">Log In</button>
    </form>

    <p class="text-center mt-3">
        Don't have an account? <a asp-controller="Auth" asp-action="Register">Sign Up</a>
    </p>
</div>
