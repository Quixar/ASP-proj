@model project.Models.User.UserSignupFormModel
@{
    ViewData["Title"] = "Registration";
}

<div class="container mt-5" style="max-width: 500px;">
    <h2 class="text-center mb-4">Create an Account</h2>

    <form asp-action="SignUp" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Username" class="form-label"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" type="email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
            <small class="form-text text-muted">Minimum 8 characters, uppercase and lowercase letters, and numbers.</small>
        </div>

        <div class="mb-3">
            <label asp-for="ConfirmPassword" class="form-label"></label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="Agree" type="checkbox" class="form-check-input" />
            <label class="form-check-label" asp-for="Agree">
                I agree to the <a href="#">terms and conditions</a> of the site.
            </label>
            <br /> <span asp-validation-for="Agree" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Register</button>
    </form>

    <p class="text-center mt-3">
        Already have an account? <a asp-controller="User" asp-action="SignIn">Log In</a>
    </p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}