<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            padding-top: 70px;
        }

        footer {
            background-color: #f8f9fa;
            padding: 15px 0;
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">MyApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Category">Category's</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item d-flex align-items-center">
                            @{
                                var name = User.Identity.Name ?? "";
                                var initial = string.IsNullOrEmpty(name) ? "?" : name[0].ToString().ToUpper();
                            }
                            <span class="d-inline-block rounded-circle bg-primary text-white text-center me-2"
                                  style="width: 40px; height: 40px; line-height: 40px; cursor: pointer;"
                                  data-bs-toggle="tooltip"
                                  title="@name">
                                @initial
                            </span>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="User" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-link nav-link" type="submit">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="SignUp">Sign up</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="SignIn">Sign in</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="text-center">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - MyApp. All rights reserved.</p>
        </div>
    </footer>

    <!-- Модальное уведомление об ошибке авторизации -->
    <div id="auth-error"
         class="position-fixed bottom-0 start-0 p-3"
         style="z-index: 1050; width: 300px;">
        @if (TempData["AuthError"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow" role="alert">
                @TempData["AuthError"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>

    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Инициализация Bootstrap tooltip
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
</body>
</html>
