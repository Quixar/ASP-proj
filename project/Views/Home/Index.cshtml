@{
    ViewData["Title"] = "Home";
}

<div style="background-color: #f8f9fa; color: #333; padding: 80px 0; border-radius: 10px;">
    <div class="container text-center animate__animated animate__fadeIn">
        <h1 class="display-4 fw-bold mb-3">Welcome to MyApp!</h1>
        <p class="lead mb-4 text-muted">A modern ASP.NET Core MVC application in a minimalist style.</p>
        <a class="btn btn-dark btn-lg shadow-sm me-2 animate__animated animate__fadeInUp" style="animation-delay: 0.3s;" asp-controller="User" asp-action="SignUp">Register</a>
        <a class="btn btn-outline-dark btn-lg shadow-sm animate__animated animate__fadeInUp" style="animation-delay: 0.5s;" asp-controller="Home" asp-action="Category">View Categories</a>
    </div>
</div>

<div class="row text-center g-4 mt-5">
    <div class="col-md-4 animate__animated animate__fadeInUp" style="animation-delay: 0.2s;">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="mb-3" style="font-size: 2rem; color: #6c757d;">
                    <i class="bi bi-grid"></i>
                </div>
                <h5 class="card-title fw-semibold">View Categories</h5>
                <p class="card-text text-muted">Explore all available categories and products.</p>
                <a asp-controller="Home" asp-action="Category" class="btn btn-outline-dark">View</a>
            </div>
        </div>
    </div>

    <div class="col-md-4 animate__animated animate__fadeInUp" style="animation-delay: 0.4s;">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="mb-3" style="font-size: 2rem; color: #6c757d;">
                    <i class="bi bi-person-plus"></i>
                </div>
                <h5 class="card-title fw-semibold">Registration</h5>
                <p class="card-text text-muted">Create your account and get full access.</p>
                <a asp-controller="User" asp-action="SignUp" class="btn btn-dark">Register</a>
            </div>
        </div>
    </div>

    <div class="col-md-4 animate__animated animate__fadeInUp" style="animation-delay: 0.6s;">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="mb-3" style="font-size: 2rem; color: #6c757d;">
                    <i class="bi bi-info-circle"></i>
                </div>
                <h5 class="card-title fw-semibold">About Us</h5>
                <p class="card-text text-muted">Learn more about our service and its features.</p>
                <a asp-controller="Home" asp-action="Profile" class="btn btn-outline-dark">Learn More</a>
            </div>
        </div>
    </div>
</div>

<div class="mt-5">
    <h2 class="text-center mb-4 fw-semibold">Why Choose Us?</h2>
    <div class="row g-4 text-center">
        <div class="col-md-4 animate__animated animate__fadeInUp" style="animation-delay: 0.2s;">
            <i class="bi bi-speedometer2" style="font-size: 2rem; color: #6c757d;"></i>
            <h5 class="mt-3 fw-semibold">High Speed</h5>
            <p class="text-muted">Our application works quickly and stably.</p>
        </div>
        <div class="col-md-4 animate__animated animate__fadeInUp" style="animation-delay: 0.4s;">
            <i class="bi bi-shield-check" style="font-size: 2rem; color: #6c757d;"></i>
            <h5 class="mt-3 fw-semibold">Security</h5>
            <p class="text-muted">We care about protecting your data.</p>
        </div>
        <div class="col-md-4 animate__animated animate__fadeInUp" style="animation-delay: 0.6s;">
            <i class="bi bi-heart" style="font-size: 2rem; color: #6c757d;"></i>
            <h5 class="mt-3 fw-semibold">Convenience</h5>
            <p class="text-muted">The interface is designed with user comfort in mind.</p>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}